<div class="section">
  <div class="section-header">
    <h1><%= pageTitle  %></h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item">Master</div>
      <div class="breadcrumb-item"> <a href="/master/products">Products</a></div>
      <div class="breadcrumb-item"><%= pageTitle  %></div>
    </div>
  </div>
  <div class="section-body">
    <form id="form" action="/master/products" method="POST" enctype="multipart/form-data">
      <div class="card">
        <div class="card-header">
          <h4><%= pageTitle  %></h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-6">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label>Name</label> <span class="text-danger">*</span>
                        <input type="text" name="name" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label>Price</label> <span class="text-danger">*</span>
                        <input type="number" name="price" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label>Category</label> <span class="text-danger">*</span>
                        <div class="form-group">
                          <select name="category_id" class="form-control" required>
                            <option value="" selected disabled>Select</option>
                            <% categories.forEach(category=> { %>
                              <option value="<%- category.id %> "> <%- category.name %> </option>
                            <% }); %> 
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label>Brand</label> <span class="text-danger">*</span>
                        <div class="form-group">
                          <select name="brand_id" class="form-control" required>
                            <option value="" selected disabled>Select</option>
                            <% brands.forEach(brand => { %>
                              <option value="<%- brand.id %> "> <%- brand.name %> </option>
                            <% }); %> 
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label>Thumbnail</label> <span class="text-danger">*</span>
                        <div class="custom-file">
                          <input name="thumbnail" type="file" class="custom-file-input">
                          <label class="custom-file-label" accept="image/png, image/jpeg">Choose file</label>
                        </div>
                        <div class="mt-2">
                          <small class="text-info"><span style="display: none;" class="selected-thumbnail"></span></small>
                        </div>
                      </div>
                      <div class="form-group">
                        <label>Short Description</label>
                        <textarea name="description" class="form-control" style="min-height: 80px;"></textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
      
            <div class="col-12 col-md-6">
              <div class="card">
                <div class="card-body">
                  <div class="mb-4">Add More Images (optional)</div>
                  <div id="moreImageContainer"></div>
                  <a href="javascript:void(0)" id="btnAddMoreImages" class="btn btn-secondary">Add More</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <div class="text-right">
            <button type="submit" class="note-btn btn btn-primary"> <i class="fas fa-save"></i> Save</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script type="module" src="/javascripts/dashboard/page/product.js"></script>