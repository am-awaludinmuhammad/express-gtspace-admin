<div class="section">
  <div class="section-header">
    <h1><%= pageTitle  %> </h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item">Master</div>
      <div class="breadcrumb-item"><%= pageTitle  %></div>
    </div>
  </div>
  <div class="section-body">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h4><%= pageTitle  %></h4>
            <div class="ml-auto">
              <a href="/master/products/create" class="note-btn btn btn-primary"> <i class="fas fa-plus"></i> Add</a>
            </div>
          </div>
          <div class="card-body">
            <table class="table table-striped data-table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Brand</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price (IDR)</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach((product, i) => { %>
                  <tr>
                    <th scope="row"><%- i+1 %> </th>
                    <td> <%- product.name %>  </td>
                    <td> <%- product.brand_name %>  </td>
                    <td> <%- product.category_name %>  </td>
                    <td class="text-right"> <%- product.price.toLocaleString('de') %>  </td>
                    <td>
                      <a href="javascript:void(0)"><i class="fas fa-edit edit-category"></i></a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="module" src="/javascripts/dashboard/page/product.js"></script>